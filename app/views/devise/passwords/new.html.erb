<head>
    <%= stylesheet_link_tag 'forgetpassword' %>

</head>
<h2 class="forget-password-title">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "forget-email-input",:placeholder => "メールアドレス"  %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class:"forget-email-submit-button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
